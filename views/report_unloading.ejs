<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('common/meta'); %>
  


    <style> 
      thead, 
      tfoot { 
          background-color: green; 
          color: white; 
      } 

      tr th { 
          background-color: green; 
          color: white; 
      } 

      td { 
          text-align: center; 
      } 
  </style> 

  </head>
  <body>
    <%- include('common/header'); %>
    <h1><%= message %></h1>
    <table id="report" border cellspacing="0">
      <thead>
        <tr>
          <th>Serial</th>
          <th>sale_point</th>
          <th>buyer</th>
          <th>cr_dr</th>
          <th>vehiclenumber</th>
          <th>rokar</th>
          <th>loaddt</th>
          <th>weight</th>
          <th>rate</th>
          <th>total</th>
          <!-- Add more columns as needed -->
        </tr>
      </thead>
      <tbody>
        <!-- Add data rows here -->
        <% if (loadingReport  &&  loadingReport.length > 0 ) { %>
        <% for(let i = 0; i < loadingReport.length; i++) { %>
          <tr>
            <td><%= i %></td>
            <td><%= loadingReport[i].sale_point %></td>
            <td><%= loadingReport[i].buyer %></td>
            <td><%= loadingReport[i].cr_dr %></td>
            <td><%= loadingReport[i].vehiclenumber %></td>
            <td><%= loadingReport[i].rokar %></td>
            <td><%= loadingReport[i].loaddt %></td>
            <td><%= loadingReport[i].weight %></td>
            <td><%= loadingReport[i].rate %></td>
            <td><%= loadingReport[i].total %></td>
          </tr>
        <% } %>
        <% } %>
      </tbody>

      <!-- tfoot tag specifies the footer of  
            this table and starts here -->
            <tfoot> 
              <tr> 
                  <th>Total</th>
                  <td>₹180</td> 
                  <td>₹180</td> 
                  <td>₹255</td> 
                  <td>₹210</td> 
                  <td>₹340</td> 
                  <td>₹160</td>
                  <td>₹160</td> 
                  <td>₹160</td>
                  <td>₹160</td>
              </tr> 
          </tfoot> 
    </table>
    <%- include('common/footer'); %>
  </body>
</html>
